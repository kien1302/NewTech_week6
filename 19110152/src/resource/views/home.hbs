                        <a href="/details/{{this.id}}"><h5 class="mt-0">Bài Viết Số : {{this.id}}</h5></a>
                        {{this.content}}
                    </div>
                    {{!-- Update --}}
                    <form method="get" action="/details/edit/{{this.id}}">
                        <span class="ml-4">
                        {{!-- <a href ="/details/edit/{{this.id}}"></a> --}}
                        <a href="/details/edit/{{this.id}}" class="btn btn-outline-success">Sửa</a>
                        </span>
                    </form>

    
                    {{!-- Update --}}

                    {{!-- Delete --}}
                    <form method="POST" action="/details/delete/{{this.id}}?_method=DELETE">
                        <span class="ml-4">
                            {{!-- <a>Xóa</a> --}}
                        </span>
                            <button type="submit" class="btn btn-outline-danger">Xóa</button>
                    </form>
                    {{!-- Delete --}}

                    
                </div>
                {{/each}}
                <!-- Add more posts here -->
            </div>
        </div>
    </div>

