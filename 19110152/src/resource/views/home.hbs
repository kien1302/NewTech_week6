        <!-- News Feed -->
        <div class="card mt-3">
            <div class="card-body">
                <h5 class="card-title">News Feed</h5>
                <!-- Individual Posts -->
                {{#each blogs}}
                {{!-- <div class="media">
                    <div class="media-body">
                        <h5 class="mt-0"></h5>
                        {{this.title}}
                    </div>
                </div> --}}
